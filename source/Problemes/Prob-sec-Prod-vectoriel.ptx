    <!-- Section 1.4 produit vectoriel -->
    <exercise>
      <statement><p>
      Calculez le produit vectoriel <m>\llt 1,2,3\rgt\times\llt 4,5,6\rgt</m>.
      </p></statement>

      <answer><p>
      <m>-3\vi+6\vj-3\vk</m>
      </p></answer>

      <solution><p>
      <md>
      <mrow>
      &amp;\llt 1,2,3\rgt\times\llt 4,5,6\rgt
       =\det\left[\begin{matrix}\vi&amp;\vj &amp;\vk
      </mrow><mrow>
                           1&amp;2&amp;3
      </mrow><mrow>
                           4&amp;5&amp;6\end{matrix}\right]
      </mrow><mrow>
      &amp;\hskip0.5in=\vi\,(2\times 6-3\times 5)
      -\vj\,(1\times 6-3\times 4)
      +\vk\,(1\times 5-2\times 4)
      </mrow><mrow>
      &amp;\hskip0.5in=-3\,\vi+6\,\vj-3\,\vk
      </mrow>
      </md>
      </p></solution>
    </exercise>

